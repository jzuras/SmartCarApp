<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartCarWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartCarWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SmartCarWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="VehicleList">Vehicles</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="grid-container">
            <div class="grid-item">
                &copy; @DateTime.Now.Year - JCZ's SmartCar App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="grid-item version-container">
                <span class="version">Version 1.0</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function callCheckboxSwitchedMethod() {
            var checkboxState = $('#testCheckbox').prop('checked');

            $.post('@Url.Action("TestCheckboxSwitched", "Home")', { checkboxState: checkboxState },
                function (result) {
                    if (result === true) {
                        // not sure how i want this to work yet - may only be enabled before connecting to car.
                        //location.reload(true);
                    }
                }
            );

            // $.ajax({
            //     url: '/Home/TestMethod',  // Adjust the URL to match your controller method
            //     type: 'POST',  // Use POST or GET depending on your controller method
            //     success: function (data) {
            //         // Handle the successful response here
            //         console.log('Successfully called the controller method:', data);
            //     },
            //     error: function (error) {
            //         // Handle the error here
            //         console.error('Error calling the controller method:', error);
            //     }
            // });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
